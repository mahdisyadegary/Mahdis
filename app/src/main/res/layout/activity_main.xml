<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <com.example.mahdis.MahdisEditText
                style="@style/border"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:textDirection="rtl" />
            <Button
                style="@style/border_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_city"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Tehran"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/darage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:textColor="@color/white"
                android:textSize="80dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/darage"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/name_city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textColor="@color/white"
                android:textSize="30dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/darage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/darage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
         >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_below="@id/Hum"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rel_shanbe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/shanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/_darage_shanbe"
                        android:layout_width="60dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/shanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_1shanbe"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/yekshanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="یک شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_yekshanbe"
                        android:layout_width="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/yekshanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_2shanbe"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_1shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/doshanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text=" دو شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_doshanbe"
                        android:layout_width="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/doshanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_3shanbe"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_2shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/seshanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="سه شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_seshanbe"
                        android:layout_width="50dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/seshanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_4shanbe"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_3shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/charshanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="چهار شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_charshanbe"
                        android:layout_width="60dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/charshanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_5shanbe"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_4shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/panjshanbe"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="پنج شنبه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_panjshanbe"
                        android:layout_width="60dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/panjshanbe"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_jome"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@id/rel_5shanbe"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">


                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/jome"
                        android:layout_width="60dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="جمعه"/>

                    <com.example.mahdis.MahdisLabel
                        android:id="@+id/darage_jome"
                        android:layout_width="60dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/jome"
                        android:layout_height="wrap_content"
                        android:text="15 / 26"/>


                </RelativeLayout>



            </RelativeLayout>





        </HorizontalScrollView>


    </RelativeLayout>

</RelativeLayout>